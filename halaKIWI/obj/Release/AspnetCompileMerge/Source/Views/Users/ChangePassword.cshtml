
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/KiwiScripts/ChangePasswordjs")
<form id="frmChangePassword">
    <div class="inner-right user-detailspage">
        <div class="right-innerarea">
            <div class="page-title clearfix">
                <div class=" client-img">
                    <h2>Change Password</h2>
                </div>
            </div>
            <p class="validate-text">The new Password should be different from last password used.</p>


            <div class="inner-formarea">

                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 input">
                        <label>Old Password*</label>
                        <input type="text" name="oldpassword" id="txtOldPassword" placeholder="Old Password*" required />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 input">
                        <label>New Password*</label>
                        <input type="text" placeholder="New Password*" id="txtPassword" required name="password" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 input">
                        <label>Confirm Password*</label>
                        <input type="text" name="password_confirm" id="txtConfirmPassword" placeholder="Confirm Password*" required />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 input">

                        <div class="submit button-btn">
                            <input class="btn-cancel" type="reset" value="cancel" />
                            <input class="btn-submit" type="button" value="Save" id="btnSave" />
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>